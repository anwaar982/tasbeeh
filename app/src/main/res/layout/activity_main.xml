<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#3E4245"
    >

    <TextView
        android:id="@+id/text_view"
        android:padding="10dp"
        android:layout_width="180dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent"
app:layout_constraintBottom_toBottomOf="@id/btn_counter"     app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="17sp"
        android:background="#ABFEEAFA"
android:layout_marginBottom="40dp"
        android:textColor="#DE000000"
        android:textStyle="bold"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/txt_tasbeeh"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
app:layout_constraintEnd_toEndOf="parent"
android:layout_marginEnd="80dp"
        android:text="سبحان الله"
        android:textColor="#ABFEEAFA"
        android:textSize="20sp"
app:layout_constraintTop_toBottomOf="@id/text_view"
        android:layout_marginTop="32dp"
        android:textStyle="bold"

        />
    <TextView
        android:id="@+id/txt_hamd"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="80dp"
        android:layout_marginTop="32dp"


        app:layout_constraintTop_toBottomOf="@id/text_view"
        android:text="الحمد لله"
        android:textColor="#ABFEEAFA"
        android:textSize="20sp"

        android:textStyle="bold"

        />
    <TextView
        android:id="@+id/txt_tahleel"
app:layout_constraintTop_toBottomOf="@id/txt_tasbeeh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/txt_tasbeeh"
        android:text="لا اله الا الله"
        android:textColor="#ABFEEAFA"
        android:textSize="20sp"
        android:layout_marginTop="16dp"

        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/txt_takbeer"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/txt_hamd"
android:layout_marginTop="16dp"
app:layout_constraintTop_toBottomOf="@id/txt_hamd"        android:text="الله اكبر"
        android:textColor="#ABFEEAFA"
        android:textSize="20sp"

        android:textStyle="bold"

        />


    <Button
        android:id="@+id/btn_counter"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:elevation="15dp"
        app:layout_constraintTop_toBottomOf="@id/text_view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cornerRadius="50dp"
        android:foreground="@drawable/ic_baseline_radio_button_checked_24"
        android:backgroundTint="#AB539A9F"

        />
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lotti_islamic_animation"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/islamic"/>
</androidx.constraintlayout.widget.ConstraintLayout>